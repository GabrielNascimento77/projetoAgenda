<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Nova conta</h1>

                    <%- include('includes/messages') %>

                    <%# FormulÃ¡rio de login %>
                    <div class="col-lg">
                        <form action="/registro" method="post">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="row">
                                <div class="col">
                                    <label for="nome">Nome</label>
                                    <input type="text" name="nome" class="form-control my-2" placeholder="Seu nome">
                                </div>
                                <div class="col">
                                    <label for="sobrenome">Sobrenome</label>
                                    <input type="text" name="sobrenome" class="form-control my-2" placeholder="Seu sobrenome">
                                </div>
                              </div>
                            <div class="form-group mt-3">
                                <label for="email">E-mail</label>
                                <input type="email" name="email" class="form-control my-2" id="email" placeholder="Digite seu email">
                                <label for="senha">Senha</label>
                                <input type="password" name="senha" class="form-control my-2" id="senha" placeholder="Digite sua senha">
                            </div>
                            <button type="submit" class="btn btn-primary mt-4">Cadastrar</button>
                        </form>
                    </div>
            </div>
        </div>

<%- include('includes/footer') %>